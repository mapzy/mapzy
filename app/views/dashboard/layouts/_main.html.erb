<div class="w-screen h-screen flex flex-col">

  <!-- Top Menu -->
  <header class="relative w-full bg-white shadow-lg border">
      <div class="md:flex items-center justify-between py-2 px-8 md:px-12">
          <div class="flex justify-between items-center">
             <div class="text-2xl font-bold text-gray-800 md:text-3xl">
              <%= link_to root_path do %>
                <%= image_tag "logo_icon_only.png", class: 'w-12' %>
              <% end %>
             </div>
          </div>
          <div class="flex flex-col md:flex-row hidden md:block -mx-2">
            <%= link_to "Docs", root_path, class: 'button--top-menu' %>
            <%= link_to "Help", root_path, class: 'button--top-menu' %>
          </div>
      </div>
  </header>

  <!-- Flash notifications -->
  <% flash.each do |key, value| %>
   <% if value.present? %>
      <div data-controller="flash" class="absolute w-1/3 top-20 left-1/2 transform -translate-x-1/2 z-50">
        <div class="flash" data-flash-target="message">
          <span class="sm:inline"><%= value %></span>
          <button data-action="flash#dismiss">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    <% end %>
  <% end %>

  <!-- Map -->
  <main class="relative w-full h-5/6">
    <%= yield %>
  </main>

  <!-- Bottom menu -->
  <nav class="relative w-full">
    <%= yield :bottom_menu %>
  </nav>
</div>