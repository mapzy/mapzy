<turbo-frame id="side_panel">
  <div class="relative h-full">
    <div class="relative w-full flex-grow">
      <%= render "shared/location" %>
    </div>

    <div class="relative w-full mt-4">
      <div class="flex-auto flex space-x-6">
        <%= link_to "Edit",
              sync_mode_path(edit_dashboard_map_location_path(map_id: @map.hashid, id: @location.hashid), @map.sync_mode),
              data: { turbo_frame: "_top" },
              class: "w-1/2 button--main #{@map.sync_mode ? "button--disabled" : ""}" %>
        <%= button_to "Delete",
            sync_mode_path(dashboard_map_location_path(map_id: @map.hashid, id: @location.hashid), @map.sync_mode),
            data: { turbo_frame: "_top" },
            form: {
              data: { turbo_confirm: "Once deleted, it's deleted! Are you sure you want to delete this location?" },
              class: "w-1/2"
            },
            method: :delete,
            disabled: true,
            class: "w-full button--secondary #{@map.sync_mode ? "button--disabled !text-white" : ""}"
        %>
      </div>
    </div>
  </div>
</turbo-frame>