<!-- Colors -->
<div class="w-32 flex-shrink-0 mt-6">
  <div class="h-10 flex flex-col justify-center">
    <div class="text-xl font-semibold text-gray-900">Colors</div>
  </div>
</div>
<div class="min-w-0 flex-1 grid grid-cols-5 2xl:grid-cols-10 gap-x-4 gap-y-3 2xl:gap-x-2">
  <div class="space-y-1.5">
    <div class="h-10 w-full rounded ring-1 ring-inset ring-black ring-opacity-0" style="background-color:#704DCC"></div>
    <div class="px-0.5 md:flex md:justify-between md:space-x-3 2xl:space-x-0 2xl:block">
      <div class="w-6 font-medium text-gray-900">.mapzy-violet</div>
      <div>#704DCC</div>
    </div>
  </div>

  <div class="space-y-1.5">
    <div class="h-10 w-full rounded ring-1 ring-inset ring-black ring-opacity-0" style="background-color:#62CFFF"></div>
    <div class="px-0.5 md:flex md:justify-between md:space-x-3 2xl:space-x-0 2xl:block">
      <div class="w-6 font-medium text-gray-900">.mapzy-blue</div>
      <div>#62CFFF</div>
    </div>
  </div>

  <div class="space-y-1.5">
    <div class="h-10 w-full rounded ring-1 ring-inset ring-black ring-opacity-0" style="background-color:#F99B46"></div>
    <div class="px-0.5 md:flex md:justify-between md:space-x-3 2xl:space-x-0 2xl:block">
      <div class="w-6 font-medium text-gray-900">.mapzy-orange</div>
      <div>#F99B46</div>
    </div>
  </div>

  <div class="space-y-1.5">
    <div class="h-10 w-full rounded ring-1 ring-inset ring-black ring-opacity-0" style="background-color:#E74D67"></div>
    <div class="px-0.5 md:flex md:justify-between md:space-x-3 2xl:space-x-0 2xl:block">
      <div class="w-6 font-medium text-gray-900">.mapzy-red</div>
      <div>#E74D67</div>
    </div>
  </div>
</div>

<!-- Buttons -->
<div class="w-32 flex-shrink-0 mt-6">
  <div class="h-10 flex flex-col justify-center">
    <div class="text-xl font-semibold text-gray-900">Buttons</div>
  </div>
</div>

<div class="flex-auto flex space-x-6">
  <%= link_to "Main option", nil, class: "w-1/6 button--main" %>
  <%= link_to "Secondary option", nil, class: "w-1/6 button--secondary" %>
</div>
