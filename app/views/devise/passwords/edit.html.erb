<%= render "devise/shared/layout" do %>

  <h2 class="text-xl md:text-2xl font-bold leading-tight mb-8">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "max-w-sm" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password", class: "label--default" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input--default" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password", class: "label--default" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input--default" %>
    </div>

    <div class="actions mt-8 mb-4">
      <%= f.submit "Change my password", class: "w-full button--main" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
