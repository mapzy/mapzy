<%= render "devise/shared/signup_login" do %>

  <h2 class="text-xl md:text-2xl font-bold leading-tight mt-8 mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "max-w-sm" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-lg bg-gray-100 mt-2 border focus:border-mapzy-violet
          focus:bg-white focus:outline-none" %>
    </div>

    <div class="actions mt-8 mb-12">
      <%= f.submit "Send me reset password instructions", class: "w-full button--main" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

<% end %>