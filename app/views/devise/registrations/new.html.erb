<% content_for :head do %>
  <% javascript_include_tag 'https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js' %>
<% end %>

<section class="flex flex-col md:flex-row h-screen items-center">
  <div class="bg-indigo-700 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
    <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_ymsnjbtq.json"
      background="transparent" speed="1" loop autoplay></lottie-player>
  </div>

  <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3
    h-screen px-6 lg:px-16 xl:px-12 flex items-center justify-center">
    <div class="w-full h-100">
      <h2 class="text-xl md:text-2xl font-bold leading-tight mt-6">Create your store locator</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mt-4">
          <%= f.label :full_name, class: 'block text-gray-700' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true,
            class: 'w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
              focus:bg-white focus:outline-none' %>
        </div>

        <div class="field mt-4">
          <%= f.label :email, class: 'block text-gray-700' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: 'w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
              focus:bg-white focus:outline-none' %>
        </div>

        <div class="field mt-4">
          <%= f.label :password, class: 'block text-gray-700' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", required: true,
            class: 'w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
              focus:bg-white focus:outline-none' %>
        </div>

        <div class="field mt-4">
          <%= f.label :password_confirmation, class: 'block text-gray-700' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
            class: 'w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
              focus:bg-white focus:outline-none' %>
        </div>

        <div class="actions mt-8">
          <%= f.submit "Sign up", class: 'w-full button-main' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</section>