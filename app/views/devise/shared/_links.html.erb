<%- if controller_name != "sessions" %>
  <div class="mt-2">
    <span> Already have an account?</span>
    <%= link_to "Log in", new_session_path(resource_name), class: "underline" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != "registrations" %>
  <div class="mt-2">
    <span> New to Mapzy?</span>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "underline" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <div class="mt-2">
    <span>Forgot your password?</span>
    <%= link_to "Reset it", new_password_path(resource_name), class: "underline" %>
  </div>
<% end %>