<div class="py-3">
  <div class="mb-8">
    <p class="text-lg font-semibold mb-4"><%= location.name %></p>
    <p class="text-sm"><%= location.description %></p>
    <p class="text-sm">📍 <%= location.address %></p>
  </div>
  <% if dashboard %>
    <div class="flex flex-row justify-between">
      <%= button_to "Delete", dashboard_map_location_path(map_id: map.id, id: location.id),
            method: :delete,
            form: { data: { turbo_confirm:
              "Once deleted, it's deleted! Are you sure you want to delete this location?"
            }}    
      %>
      <%= link_to "Edit", edit_dashboard_map_location_path(map_id: map.id, id: location.id) %>
    </div>
  <% end %>
</div>